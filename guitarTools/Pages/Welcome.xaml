<local:BasePage x:Class="GuitarScales.Pages.Welcome"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="clr-namespace:GuitarScales.Pages"
                mc:Ignorable="d"
                d:DesignHeight="300" d:DesignWidth="300"
                Title="Welcome">

    <DockPanel Background="White">
        <Label DockPanel.Dock="Top" Content="Welcome" HorizontalAlignment="Center" FontSize="20" />
        <Grid VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="ButtonOptionA" Grid.Column="0" Content="Guitar" Click="ButtonOptionA_Click" />
            <Button x:Name="ButtonOptionB" Grid.Column="1" Content="Piano" IsEnabled="False"
                    Click="ButtonOptionB_Click" ToolTip="Coming soon" />
        </Grid>

    </DockPanel>
</local:BasePage>